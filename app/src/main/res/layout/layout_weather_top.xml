<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/topContent"
    tools:background="@drawable/day_background">

    <ImageView
        android:layout_width="@dimen/icon_weather_size"
        android:layout_height="@dimen/icon_weather_size"
        android:layout_margin="@dimen/icon_weather_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@drawable/clear_day"/>

    <TextView
        android:id="@+id/tvWeatherDescription"
        style="@style/TextViewStyle.WeatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_weather_description_margin_end"
        app:layout_constraintBottom_toTopOf="@+id/imgWaves"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="cloudy"/>

    <ImageView
        android:id="@+id/imgWaves"
        android:layout_width="0dp"
        android:layout_height="@dimen/image_waves_height"
        android:src="@drawable/waves"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>