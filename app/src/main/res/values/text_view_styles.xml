<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextViewStyle.WeatherDescription" parent="TextViewStyle">
        <item name="android:letterSpacing">0.15</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle.WeatherTemperature" parent="TextViewStyle">
        <item name="android:letterSpacing">-0.1</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="TextViewStyle.WeatherTemperatureSymbol" parent="TextViewStyle">
        <item name="android:textSize">@dimen/symbol_temperature_font_size</item>
    </style>

    <style name="TextViewStyle.City" parent="TextViewStyle">
        <item name="android:letterSpacing">0.05</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyle.Date" parent="TextViewStyle">
        <item name="android:letterSpacing">0.1</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

</resources>
